<Page x:Class="WpfApp12.Pages.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Список пользователей"
      Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Добавить" Click="AddButton_Click" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,8,0"/>
            <Button Content="Удалить" Click="DeleteItem_Click" Style="{StaticResource MaterialDesignRaisedLightButton}"/>
        </StackPanel>

        <ListView Grid.Row="1"
                  ItemsSource="{Binding Users}"
                  SelectedItem="{Binding SelectedUser}"
                  MouseDoubleClick="EditItem_Click"
                  SelectionMode="Single">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1">
                        <StackPanel>
                            <TextBlock Text="{Binding Login}" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding Name}" Foreground="{DynamicResource MaterialDesignBody}"/>
                            <TextBlock>
                                <Run Text="Email:" FontWeight="Bold"/>
                                <Run Text="{Binding Email}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Роль:" FontWeight="Bold"/>
                                <Run Text="{Binding Role.Title, FallbackValue='—'}"/>
                            </TextBlock>
                            <TextBlock>
                                <Run Text="Телефон:" FontWeight="Bold"/>
                                <Run Text="{Binding UserProfile.Phone, FallbackValue='—'}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Grid.Row="2" Margin="0,8,0,0"
                   Text="{Binding Users.Count, StringFormat=Всего: {0}}"
                   FontSize="14" Foreground="{DynamicResource MaterialDesignBody}"/>
    </Grid>
</Page>