<Page x:Class="WpfApp12.Pages.InterestGroupListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Группы интересов"
      Background="{DynamicResource MaterialDesignPaper}">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button Content="Добавить" Click="Add_Click" Style="{StaticResource MaterialDesignRaisedButton}" Margin="0,0,8,0"/>
            <Button Content="Назад" Click="Back_Click" Style="{StaticResource MaterialDesignFlatButton}"/>
        </StackPanel>

        <ListView Grid.Row="1"
                  ItemsSource="{Binding Service.Groups}"
                  SelectedItem="{Binding SelectedGroup}"
                  MouseDoubleClick="GroupDoubleClick">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="12" BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="0,0,0,1">
                        <StackPanel>
                            <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                            <TextBlock Text="{Binding Description}" Foreground="{DynamicResource MaterialDesignBody}" TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding UserGroups.Count, StringFormat=Участников: {0}}"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
